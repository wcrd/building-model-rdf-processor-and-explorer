@prefix brick: <https://brickschema.org/schema/Brick#> .
@prefix cdterms: <http://purl.org/dc/terms/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sa_evs: <https://switchautomation.com/schemas/EntityValidationShape#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix switch: <https://switchautomation.com/schemas/BrickExtension#> .

<https://self.meta/point_validation_max_set> a owl:Ontology ;
    cdterms:creator "wcrd" ;
    cdterms:date "2023-01-27" ;
    rdfs:comment "Initial version" ;
    owl:versionInfo "1.0.0" .

sa_evs:Induction_Unit_point_validation a sh:NodeShape ;
    rdfs:comment "Root shape for all point validation for: Induction_Unit" ;
    sh:property sa_evs:Induction_Unit_maximum_point_set ;
    sh:targetClass switch:Induction_Unit .

sa_evs:Induction_Unit_allowed_points a sh:NodeShape ;
    sh:in [ rdf:rest () ] .

sa_evs:Induction_Unit_maximum_point_set a sh:PropertyShape ;
    rdfs:comment "Allowable points for class and subclasses of: Induction_Unit" ;
    sh:message "Point not in allowed list" ;
    sh:or ( [ sh:Severity sh:Info ;
                sh:node sa_evs:Induction_Unit_allowed_points ;
                sh:path rdf:type ] ) ;
    sh:path brick:hasPoint .

